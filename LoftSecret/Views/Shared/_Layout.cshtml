<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Loft Secret</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/fonts.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LoftSecret.styles.css" asp-append-version="true" />
</head>

<body class="bg-gray-100 font-medium">
    <div>
        <div class="container mx-auto px-4">
            @RenderBody()
        </div>
    </div>

    <!-- Footer begin -->
    <div class="h-8"></div>
    <footer class="bg-white">
        <div class="container mx-auto h-64 md:h-32 px-4 py-4 flex flex-col items-center justify-center space-y-8">
            <div
                class="w-full px-16 lg:px-32 flex items-center flex-col md:flex-row justify-center gap-4 md:gap-0 md:justify-between">
                <a class="text-gray-500">About</a>
                <a class="text-gray-500">Contacts</a>
                <a class="text-gray-500">Terms of services</a>
                <a class="text-gray-500">Privacy Policy</a>
            </div>
            <div class="justify-self-end text-gray-500">
                <p>&copy;Loft Secret @(DateTime.Today.Year). Tous droits réservés</p>
            </div>
        </div>
    </footer>
    <!-- Footer end -->
    <script src="~/lib/tailwindcss/tailwindcss.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
